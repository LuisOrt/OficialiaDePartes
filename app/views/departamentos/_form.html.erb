<%= form_for(departamento) do |f| %>
  <% if departamento.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(departamento.errors.count, "error") %> prohibited this departamento from being saved:</h2>

      <ul>
      <% departamento.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <% if departamento.id == nil %>
    <div class="field">
      <%= f.label :user_id %>
      <%= f.select :user_id, User.all.collect { |c| [c.email, c.id] } %>
    </div>
  <% else %>
    <div class="field">
      <%= f.label :user_id %>
      <%= f.hidden_field :user_id, :value => @departamento.user.id %>
      <% x= User.pluck(:email) %>
      <%= x[@departamento.user.id]%>
    </div>
  <% end %>
  <div class="field">
    <%= f.label :nombre %>
    <%= f.text_field :nombre %>
  </div>

  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>


